    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item.active
        %a.nav-link{:href => "/"}
          %i.fas.fa-headphones-alt.fa-2x
          = image_tag '/images/logo1.jpg', alt: 'アプリロゴ',　class: 'navbar-brand-logo'
          %span.sr-only (current)
      %li.nav-item
        %a.nav-link{:href => "/home/movie"} MV
      %li.nav-item  
        %a.nav-link{:href => "#"} Playlist
      %li.nav-item.dropdown
