                  %br
                  = link_to youtube_match_playlist_path(playlist_id: 'PLQ6aFfQOcQBPjwabrsAf5cH7UL51X0ODA') do
                    %i.fab.fa-youtube.fa-2x
            .col-md-4
              .card.bg-info.text-white.text-center
